<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Het_Cameraatje.Views.StartPage"
             BackgroundImage="background.png"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Spacing="20">
            <Image Source="logo.png"/>
            <StackLayout HorizontalOptions="Center" Spacing="20">
                <Button 
                    x:Name="btnHome"  
                    Command="{Binding HomeCommand}" 
                    Image="baseline_home_black_48.png" 
                    WidthRequest="160" 
                    HeightRequest="160"/>
                <Button 
                    x:Name="btnSchool"  
                    Command="{Binding SchoolCommand}" 
                    Image="baseline_school_black_48.png" 
                    WidthRequest="160" 
                    HeightRequest="160"/>
            </StackLayout> 
        </StackLayout>
    </ContentPage.Content>
</ContentPage>